{
  "name": "hpath",
  "version": "1.1.0",
  "description": "GUI for env&path",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "electron . -t",
    "build_mac": "electron-builder build --mac --arm64"
  },
  "keywords": [
    "markdown"
  ],
  "build": {
    "productName": "hpath",
    "appId": "top.newham.hpath",
    "directories": {
      "output": "build"
    },
    "mac": {
      "icon": "./asserts/img/icons8-list-256(Mac).icns",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "dir",
          "arch": "arm64"
        }
      ]
    }
  },
  "author": "newham",
  "license": "ISC",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5"
  }
}